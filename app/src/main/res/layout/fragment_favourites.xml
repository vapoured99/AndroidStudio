<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:titleTextColor="@color/black"
            android:elevation="4dp">


        </androidx.appcompat.widget.Toolbar>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="2dp"
            android:background="#add8e6">

            <!--    <androidx.recyclerview.widget.RecyclerView-->
            <!--        android:id="@+id/recycler_view"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="match_parent"-->
            <!--        android:layout_marginTop="10dp" />-->


            <LinearLayout
                android:id="@+id/lay9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/itembg2"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <ImageView
                    android:id="@+id/itemImage1"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lin" />

                <!--    android:scaleType="fitCenter"-->


                <TextView
                    android:id="@+id/itemText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/linlithgow_palace"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="75dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_fav_red"
                    android:text="View"
                    android:id="@+id/button1"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lay11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/itembg2"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <ImageView
                    android:id="@+id/itemImage3"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/lochness"
                    android:scaleType="fitCenter" />

                <!--    android:scaleType="fitCenter"-->


                <TextView
                    android:id="@+id/itemText3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:textColor="@color/black"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/loch_ness"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="75dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_fav_red"
                    android:text="@string/view"
                    android:id="@+id/button3"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/itembg2"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <ImageView
                    android:id="@+id/itemImage4"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bennevis2"
                    android:scaleType="fitCenter" />

                <!--    android:scaleType="fitCenter"-->


                <TextView
                    android:id="@+id/itemText4"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="Ben Nevis Mountain"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="75dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_fav_red"
                    android:text="View"
                    android:id="@+id/button4"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="80dp"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />


</androidx.drawerlayout.widget.DrawerLayout>





















